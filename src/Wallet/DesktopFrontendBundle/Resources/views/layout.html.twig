{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('assets/pages/desktop/css/app.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}

    <div id="wrap">

        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">Symwallet</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    {% if app.user %}
                        <ul class="nav navbar-nav">
                            <li><a href="#">Link</a></li>
                        </ul>
                    {% else %}
                    {% endif %}

                    {% if app.user %}
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ app.user.username }} <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                </ul>
                            </li>
                        </ul>
                    {% else %}
                    {% endif %}

                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <div class="container">
            <div class="col-lg-12">
                {% block content %}
                {% endblock %}
            </div>
        </div>

    </div>

    <div id="footer">
        <div class="container">
            <div class="centered copyright">
                <p class="text-muted credit">&copy; {{ 'now'|date('Y') }}, Florian Weber | <a href="{{ path('index') }}">Home</a> | <a href="{{ path('imprint') }}">Imprint</a></p>
            </div>
        </div>
    </div>

{% endblock %}
